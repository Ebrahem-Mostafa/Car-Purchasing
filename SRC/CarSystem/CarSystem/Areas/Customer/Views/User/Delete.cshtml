@model CarSystem.Models.AppUser
@{
    ViewData["Title"] = "Delete";
}
<br />

<h2 class="text-info"> Delete User </h2>
<form asp-action="Delete" method="post" id="user-form" enctype="multipart/form-data ">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3>@ViewBag.message</h3>
    <h3>Do u want to delete the user ?</h3>

    <div class="row">

        <div class="p-4 rounded border p-3">
            <div class="card-group form-group">
            </div>
            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="UserName" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="UserName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="UserName"></span>
            </div>
            <br />


            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="FirstName" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="FirstName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="FirstName"></span>
            </div>
            <br />

            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="LastName" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="LastName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="LastName"></span>
            </div>
            <br />
            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="Address" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Address" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="Address"></span>
            </div>
            <br />
            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="Age" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Age" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="Age"></span>
            </div>

            <br />
            <div class="card-group row">
                <div class="col-2">
                    <label asp-for="PhoneNumber" class="control-lable"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PhoneNumber" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="PhoneNumber"></span>
            </div>

            <br />

            <div class="card-group row">
                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                   
                    <a asp-action="Index" class="btn btn-success">Back To List</a>
                </div>
                <br />

            </div>

        </div>
    </div>

</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script type="text/javascript">
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    Username: {
                        required: true,
                    },
                    PasswordHash: {
                        required: true,
                    }
                },
                message: {
                    UserName: "Please enter Your Email",
                    PasswordHash: "Please enter a Password"
                }


            }
                                    });
                                });
    </script>
    }

